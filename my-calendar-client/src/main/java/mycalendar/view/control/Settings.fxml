<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root type="StackPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="mainContainer" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="120.0" prefWidth="300.0">
         <children>
            <VBox fx:id="buttonsContainer" alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="140.0" spacing="10.0" HBox.hgrow="NEVER">
               <children>
                  <Button fx:id="themeButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onThemeButtonAction" prefWidth="100.0" text="Theme">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button fx:id="langButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLangButtonAction" prefWidth="100.0" text="Language">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
            <HBox fx:id="selectedOptionContainer" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</fx:root>
